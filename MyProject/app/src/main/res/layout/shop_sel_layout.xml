<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:contentPadding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/shopsel_checkbox"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/shopsel_sdv"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:placeholderImage="@drawable/s6"
                app:roundBottomLeft="true"
                app:roundBottomRight="true"
                app:roundTopLeft="true"
                app:roundTopRight="true"
                app:roundedCornerRadius="10dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/shopsel_title"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="哈哈哈"
                    android:textSize="19sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/shopsel_price"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="价格"
                        android:textColor="#f00"
                        android:textSize="19sp" />

                    <com.bw.myproject.weiget.AdderView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:gravity="center"></com.bw.myproject.weiget.AdderView>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
