<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:textColor="#FFB199"
        android:text="热销商品"
        android:textSize="19sp"
        android:gravity="center"
        android:background="@drawable/home_one"
        android:layout_height="50dp" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/homeone_sdv"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        app:placeholderImage="@drawable/s6"
        app:roundBottomLeft="true"
        app:roundBottomRight="true"
        app:roundTopLeft="false"
        app:roundTopRight="true"
        app:roundedCornerRadius="20dp" />

    <TextView
        android:id="@+id/homeone_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="哈哈"
        android:textSize="19dp" />

    <TextView
        android:id="@+id/homeone_price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="价格"
        android:textColor="#f00"
        android:textSize="19dp" />

</LinearLayout>
