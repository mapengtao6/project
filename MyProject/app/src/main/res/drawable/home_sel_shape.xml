<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <corners
        android:radius="5dp"
        android:topLeftRadius="30dp"
        android:bottomRightRadius="30dp"
        ></corners>

    <solid
        android:color="#000"
        ></solid>

    <stroke
        android:color="#808080"
        android:width="2dp"
        ></stroke>

    <!--渐变-->
